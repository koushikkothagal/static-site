<html>

<head>
    <%- include partials/head.ejs %>
</head>

<body>
    <% var thisCourse = s.courseMap[courseCode] %>
    <% var thisTopic = s.topicMap[thisCourse.topic] %>
        <div class="<%= thisCourse.topic %>">
            <div class="container resize-offset">
                <div class="row">
                    <% var prevUrl = '/courses/' + thisCourse.code %>
                    <% var prevName = thisCourse.name %>
                    <%- include partials/navbar.ejs %>
                </div>
            </div>
            <div class="container-fluid topic-bg" style="margin-top: -25px">
                <div id="lesson-nav" class="container">
                    <% util.sort(unit, 'lessonnumber') %>
                    <% for(var i=0; i<unit.length; i++) {%>
                        <% var lesson = unit[i] %>
                        
                        <% var bigAndFaded = 'fa-2x faded' %>
                        <% var playOrQuestionIcon = lesson.quiz ? 'fa-question-circle' : 'fa-play-circle' %>
                    <!-- ngRepeat: alesson in lesson.unit.lessons -->
                    <div>
                    <span class="fa-stack">
                        <% if (lesson.path === path) { %>
                        <% bigAndFaded = '' %>
                        <i ng-if="alesson.current" class="fa fa-stack-2x fa-circle-thin ng-scope" style="color: rgb(255, 255, 255);"></i>
                        <% } %>
                        
                        
                            
                        
                    <a class="fa fa-stack-1x <%= bigAndFaded %> clickable <%= playOrQuestionIcon %>" 
                        href="<%= lesson.path %>" 
                        style="color: #FFF;text-decoration: none;" 
                        popover="<%= lesson.description %>" 
                        popover-title="<%= i+1 %>. <%= lesson.name %>" 
                        popover-trigger="mouseenter" 
                        popover-placement="bottom" 
                        type="button"></a>
                     </span>
                     </div>
                     <% } %>
                    <!-- end ngRepeat: alesson in lesson.unit.lessons -->
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                </div>
            </div>
            <div class="container-fluid">
                <div class="card" style="margin-left: -15px; margin-right: -15px;margin-bottom: 10px;height: 132px;">
                    <div class="container full-height" style="padding: 15px 25px;width:90%;">
                        <div class="row head-row full-height">
                            <div class="col-md-8 border-right full-height">
                                <!-- ngIf: lesson.info.prev -->
                                <h3><span class="slNo topic-color"><%= unitnumber %>.<%= lessonnumber %></span> <span class="lesson-title" ng-bind="lesson.info.title"><%= name %></span></h3>
                                <p><%= description %></p>
                            </div>
                            <div class="col-md-4 padded">
                                
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ngIf: lesson.info.type === 'video' -->
            <div class="ng-scope" ng-if="lesson.info.type === 'video'">
                <div class="embed-container shadow" style="max-width: 1320px;margin: auto;margin-bottom: 40px;">
                    <iframe src="//www.youtube.com/embed/<%= youtube %>?rel=0&amp;showinfo=0&amp;fs=1&amp;theme=light&amp;modestbranding=1"
                    id="youtube-player" allowfullscreen="" frameborder="0"></iframe>
                    <!-- TODO: Image https://i.ytimg.com/vi/cokoHTs3a4k/maxresdefault.jpg -->
                </div>
                <div class="container-fluid">
                    <div class="container">
                        <div class="col-md-8 notes padded">
                            <%= contents %>
                        </div>
                        <div class="col-md-4 padded border-left">
                            <!-- ngIf: lesson.info.sourceCode -->
                        </div>
                    </div>
                </div>
            </div>
            <!-- end ngIf: lesson.info.type === 'video' -->
            <!-- ngIf: lesson.info.type === 'quiz' -->
        </div>
    

    <%- include partials/scripts.ejs %>
</body>

</html>